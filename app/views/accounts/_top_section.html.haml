.section
  %table(width="500" cellpadding="0" cellspacing="0")
    %tr
      %td(valign="top")
        .label.top.req #{t :name}:
        = f.text_field :name, :style => "width:324px"
      %td= spacer
      %td(valign="top")
        .label.top.req #{t :assigned_to}:
        = assigned_to_select_for(@account)
    %tr
      %td
        .label.req #{t :tags}:
        %div#tag_form_field
          = text_field_with_auto_complete :tag, :name, {:class => 'txt-std'},{:indicator => "auto_tag_loading",:tokens=>",",:skip_style=>true}
          = image_tag "loading.gif", :size => "16x16", :id=>'auto_tag_loading', :style=>"display:none;"
    - if Setting.background_info && Setting.background_info.include?(:account)
      %tr
        %td(valign="top" colspan="3")
          .label= t(:background_info) << ':'
          = f.text_area :background_info, :style =>"width:500px", :rows => 3
    = hook(:account_top_section_bottom, self, :f => f)

= hook(:account_top_section_after, self, :f => f)
