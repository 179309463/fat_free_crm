= styles_for :task, :opportunity

#confirm{ hidden }
.title_tools#menu
  = link_to_inline(:edit_contact, edit_contact_path(@contact), :text => t(:edit)) + " | "
  = link_to_function(t(:delete) + '?', confirm_delete(@contact))
.title#edit_contact_title= h(@contact.full_name)

%div#edit_contact{ hidden }

= render :partial => "comments/new", :locals => { :commentable => @contact }
= render :partial => "common/timeline", :collection => @timeline

.subtitle
  = 'Tags'
%div
  = render :partial => "common/tags", :locals => {:tags => @contact.tags, :owner => @contact}

  - remote_form_for @contact, :url => add_tag_contact_path(@contact), :html => {:id => 'new_tag'} do |f|
    = f.text_field :tag_list, :value => ''
    = f.submit 'Add tags'

= section(@contact, :tasks)
.log#tasks
  = render :partial => "common/tasks"

= section(@contact, :opportunities)
.list#opportunities
  = render :partial => "opportunities/opportunity", :collection => @contact.opportunities

= load_select_popups_for(@contact, :tasks, :opportunities)

= hook(:show_contact_bottom, self)
